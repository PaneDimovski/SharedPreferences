<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Plava"
    tools:context="com.example.anti.sharedpreferences.Main2Activity">

    <ImageView
        android:id="@+id/slika2"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/husky"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/name1"
        android:text="USERNAME"
        android:layout_marginTop="15dp"
        android:layout_below="@id/slika2"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/name2"
        android:layout_marginTop="15dp"
        android:layout_below="@id/name1"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/last1"
        android:layout_below="@id/name2"
        android:text="LASTNAME"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/last2"
        android:layout_below="@id/last1"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/age1"
        android:layout_centerInParent="true"
        android:text="AGE"
        android:layout_below="@id/last2"
        android:layout_width="150dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/age"
        android:layout_centerInParent="true"
        android:layout_below="@id/age1"
        android:layout_width="150dp"
        android:layout_height="40dp" />
<Button
    android:id="@+id/btn2"
    android:layout_below="@id/age"
    android:text="LOAD"
    android:layout_centerInParent="true"
    android:layout_width="150dp"
    android:layout_height="35dp" />

</RelativeLayout>
