<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Plava"
    tools:context="com.example.anti.sharedpreferences.MainActivity">

   <ImageView
       android:id="@+id/slika"
       android:layout_marginLeft="130dp"
       android:layout_marginTop="150dp"
       android:layout_width="100dp"
       android:background="@drawable/husky"
       android:layout_height="100dp" />

    <EditText
        android:id="@+id/name"
        android:layout_below="@id/slika"
        android:layout_centerInParent="true"
        android:text="First Name"
        android:layout_width="250dp"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/last"
        android:layout_below="@id/name"
        android:text="LastName"
        android:layout_centerInParent="true"
        android:layout_width="250dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/btn"
        android:layout_centerInParent="true"
        android:text="Save User Details"
        android:layout_below="@id/fm"
        android:layout_width="250dp"
        android:layout_height="40dp" />

    <RadioGroup
        android:id="@+id/fm"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/last"
        android:gravity="center_vertical"
        android:layout_width="50dp"
        android:layout_height="80dp">


        <RadioButton
            android:id="@+id/m"
            android:text="M"
            android:layout_width="50dp"
            android:layout_height="30dp" />
        <RadioButton

            android:id="@+id/f"
            android:text="F"
            android:layout_width="50dp"
            android:layout_height="30dp" />

    </RadioGroup>

</RelativeLayout>
